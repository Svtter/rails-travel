<h1>Listing artilces</h1>

<%= link_to 'New article', new_article_path %>

<table>
    <tr>
        <th>Title</th>
        <th>Text</th>
        <th>Link</th>
    </tr>

    <% @articles.each do |article| %>
        <tr>
            <td><%= article.title %></td>
            <td><%= article.text %></td>
            <td><%= link_to 'Show', article_path(article) %></td>
        </tr>
    <% end %>
</table>
